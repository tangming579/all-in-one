<Window x:Class="MongoDBDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MongoDBDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txb" HorizontalAlignment="Left" Height="355" Margin="215,41,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="519"/>
        <StackPanel Margin="30,77,0,0">
            <Button Content="读取" x:Name="btnSelect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnSelect_Click"/>
            <Button Content="插入" x:Name="btnInsert" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="75" Click="btnInsert_Click"/>
            <Button Content="更新" x:Name="btnUpdate" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdate_Click"/>
            <Button Content="删除" x:Name="btnDelete" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="75" Click="btnDelete_Click"/>
        </StackPanel>
    </Grid>
</Window>
